import java.awt.Color;
import java.awt.Dimension;
import java.awt.Graphics;

import javax.swing.JPanel;

public class Indicator extends JPanel {
	public static final int IDLE = 0;
	public static final int AWARE = 1;
	public static final int ACTIVE = 2;
	private Dimension PANEL_SIZE = new Dimension(480, 480);
	private int state;
	
	public Indicator() {
		setPreferredSize();
		setState(IDLE);
	}
	
    public void paintComponent(Graphics g){  
        super.paintComponent(g);
        g.setColor(Color.red);
        int radius = ( PANEL_SIZE.width < PANEL_SIZE.height ) ? PANEL_SIZE.width : PANEL_SIZE.height;
        g.fillOval(PANEL_SIZE.width / 2, PANEL_SIZE.height / 2, radius, radius)
             , player.getRadius());
    } 
	
	public void setState(int state) {
		this.state = state;
		
		Color color;
		switch (state) {
		case IDLE:
			color = Color.RED;
			break;
		case AWARE:
			color = Color.YELLOW;
			break;
		case ACTIVE:
			color = Color.GREEN;
			break;
		default:
			color = Color.RED;
			break;
		}
		
		setBackground(color);
	}
	
	public int getState() {
		return state;
	}
}
