import java.awt.Color;
import java.awt.Dimension;
import java.awt.Graphics;
import java.util.logging.Level;
import java.util.logging.Logger;

import javax.swing.JPanel;

public class Indicator extends JPanel {
	public static final int IDLE = 0;
	public static final int AWARE = 1;
	public static final int ACTIVE = 2;
	private Dimension PANEL_SIZE = new Dimension(480, 480);
	private final Logger logger = Logger.getLogger(QRDecoder.class.getName());
	private int state;
	
	public Indicator() {
		super();
		setPreferredSize(PANEL_SIZE);
		setState(IDLE);
	}
	
    public void paintComponent(Graphics g){
        super.paintComponent(g);
        logger.log(Level.INFO, "paint");
		Color color;
		switch (state) {
		case IDLE:
			color = Color.RED;
			break;
		case AWARE:
			color = Color.YELLOW;
			break;
		case ACTIVE:
			color = Color.GREEN;
			break;
		default:
			color = Color.RED;
			break;
		}
        
        g.setColor(color);
        int radius = ( PANEL_SIZE.width < PANEL_SIZE.height ) ? PANEL_SIZE.width : PANEL_SIZE.height;
        radius *= 0.35;
        g.fillOval(PANEL_SIZE.width / 2, PANEL_SIZE.height / 2, radius, radius);
    } 
	
	public void setState(int state) {
		this.state = state;
		repaint();
	}
	
	public int getState() {
		return state;
	}
}
